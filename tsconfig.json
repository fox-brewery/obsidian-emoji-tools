{
	"compilerOptions": {
		"baseUrl": ".",
		"inlineSourceMap": true,
		"inlineSources": true,
		"jsx": "react",
		"module": "ESNext",
		"target": "ESNext",
		"allowJs": true,
		"checkJs": true,
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"noImplicitAny": true,
		"moduleResolution": "Node",
		"noEmit": true,
		"allowImportingTsExtensions": true,
		"importHelpers": true,
		"lib": ["DOM", "ESNext"]
	},
	"include": ["**/*.ts", "**/*.tsx"]
}
